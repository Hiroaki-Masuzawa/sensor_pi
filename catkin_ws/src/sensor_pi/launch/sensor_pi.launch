<launch>
    <arg name="use_ultrasonic" default="true" />
    <arg name="use_tof" default="false" />
    <node pkg="sensor_pi" name="sensor_pi_node" type="sensor_pi_node.py" output="screen">
        <param name="~use_ultrasonic" value="$(arg use_ultrasonic)" />
        <param name="~use_tof" value="$(arg use_tof)" />
    </node>
</launch>
